{
  "name": "dev-container",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  },
  "initializeCommand": {
    "init": "bash ${localWorkspaceFolder}/initialize-command.sh \"${localWorkspaceFolderBasename}\""
  },
  "mounts": [
    "source=${localEnv:HOME}/.gitconfig,target=/opt/app-root/src/.gitconfig,type=bind,consistency=cached",
    "source=${localWorkspaceFolderBasename}_zoxide,target=/opt/app-root/src/.local/share/zoxide,type=volume",
    "source=${localWorkspaceFolderBasename}_blesh,target=/opt/app-root/src/.local/share/blesh,type=volume"
  ]
}
